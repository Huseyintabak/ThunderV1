# ThunderV1 Production Environment Configuration
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Supabase proje URL'inizi buraya yazın
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anon key'inizi buraya yazın
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key'inizi buraya yazın (güvenli tutun!)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===========================================
# DATABASE CONFIGURATION (Opsiyonel)
# ===========================================
# Eğer ayrı bir PostgreSQL veritabanı kullanıyorsanız
DB_HOST=localhost
DB_PORT=5432
DB_NAME=thunder_production
DB_USER=thunder_user
DB_PASSWORD=your_secure_db_password

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT secret key (güçlü bir şifre oluşturun)
JWT_SECRET=your_super_secure_jwt_secret_key_here_2024

# Session secret key
SESSION_SECRET=your_super_secure_session_secret_key_here_2024

# CORS ayarları
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# EMAIL CONFIGURATION (Opsiyonel)
# ===========================================
# Email bildirimleri için
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password
EMAIL_FROM=Thunder Production <noreply@yourdomain.com>

# ===========================================
# SSL CONFIGURATION
# ===========================================
# SSL sertifikası yolları (Let's Encrypt)
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# SSL ayarları
SSL_ENABLED=true
FORCE_HTTPS=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log seviyesi (error, warn, info, debug)
LOG_LEVEL=info

# Log dosyası yolu
LOG_FILE_PATH=/var/log/thunder-production/app.log

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
# PM2 cluster modunda çalışacak instance sayısı
PM2_INSTANCES=2

# Memory limit (MB)
MEMORY_LIMIT=512

# ===========================================
# REDIS CONFIGURATION (Opsiyonel)
# ===========================================
# Redis cache için (performans artışı)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
# Health check endpoint
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/api/health

# Metrics endpoint
METRICS_ENABLED=true
METRICS_PATH=/api/metrics

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# Otomatik backup ayarları
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Her gün saat 02:00
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/opt/backups/thunder-production

# ===========================================
# FEATURE FLAGS
# ===========================================
# Özellik bayrakları
ENABLE_REAL_TIME=true
ENABLE_NOTIFICATIONS=true
ENABLE_AUDIT_LOG=true
ENABLE_API_RATE_LIMITING=true

# ===========================================
# DEVELOPMENT/DEBUG (Production'da false olmalı)
# ===========================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_DEV_TOOLS=false

# ===========================================
# EXTERNAL SERVICES (Opsiyonel)
# ===========================================
# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Sentry error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ===========================================
# CUSTOM CONFIGURATION
# ===========================================
# Özel ayarlarınızı buraya ekleyin
CUSTOM_SETTING_1=value1
CUSTOM_SETTING_2=value2