        .from('active_productions')
        .delete()
        .eq('plan_id', plan.id);
        
      if (deleteProductionsError) throw deleteProductionsError;
    }
    
    // 3. PlanlarÄ± sil
    const { error: deletePlansError } = await supabase
      .from('production_plans')
      .delete()
      .eq('order_id', orderId);
      
