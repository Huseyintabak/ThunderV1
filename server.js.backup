                    .from('order_management')
                    .select('order_number, customer_name')
                    .eq('id', state.order_id)
                    .single();
                
                if (!orderError && order) {
                    orderInfo.order_number = order.order_number;
                    orderInfo.customer_name = order.customer_name;
                }
            }
            
            return {
                id: state.id,
